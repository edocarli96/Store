---
import MultipleSelectionPage from '~/layouts/MultipleSelectionPage.astro';
import { Languages } from '~/utils/types';

export async function getStaticPaths() {
	return Languages.values().map((language) => {
		return {
			params: { lang: language },
			props: { language },
		};
	});
}

const schools = [
	{
		title: ['IEEE', 'IEEE'],
		path: 'ieee',
		text: ['Scuola di Ingegneria Industriale dell\'Informazione', 'School of Industrial Information Engineering'],
	},
	{
		title: ['Design', 'Design'],
		path: 'design',
		text: ['Scuola di Design', 'School of Design'],
	},
	{
		title: ['Icat', 'Icat'],
		path: 'icat',
		text: ['Scuola di Ingegneria Civile, Ambientale e Territoriale', 'School of Civil, Environmental and Territorial Engineering'],
	},
	{
		title: ['Auic', 'Auic'],
		path: 'auic',
		text: ['Scuola di Architettura Urbanistica e Ingegneria delle Costruzioni', 'School of Architecture Urban Planning and Construction Engineering'],
	},
];

const { language } = Astro.props;
---

